@{
    ViewData["Title"] = "Home Page";
}



<div style="height:800px;margin:-15px !important;margin-bottom:-20px !important; background-size:cover; position:relative; background-image:url('../images/splash.jpg')">

    <div id="myCarousel" class="carousel slide img-responsive" data-ride="carousel" data-interval="4000" style="margin-right:0px !important;">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active" style="max-height:200px;">
                @*<img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />*@
                <div class="carousel-caption" role="option">
                    <p style="color:white;font-size:30px">
                        Tired to get your bike stolen ?
                    </p>
                </div>
            </div>
            <div class="item" style="max-height:200px;">
                @*<img src="~/images/banner2.svg" alt="Visual Studio" class="img-responsive" />*@
                <div class="carousel-caption" role="option">
                    <p style="color:white;font-size:30px">
                        Always keep an eyes on your bike, motocycle...

                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>




    <div class="container text-center">
        <h1 style="color:white;z-index:110; margin-top:160px;">Antea25 IOT solution</h1>
        <br><br><br><br>

        <button style="margin-right:5px;margin-left:5px" type="button" class="btn btn-labeled btn-primary btn-sm" onclick="location.href='@Url.Action("Index", "Dashboard")'">
            <span class="btn-label btn-lg">LOGIN</span>
        </button>

        <button style="margin-right:5px;margin-left:5px" type="button" class="btn btn-labeled btn-info btn-sm" onclick="location.href='@Url.Action("Contact", "Home")'">
            <span class="btn-label btn-lg">CONTACT</span>
        </button>
 
        <div style="border:solid;border-color:white;border-width:1px; width:263px;height:146px;margin-top:140px; margin-left:50px !important" >
            <video controls="controls" autoplay="autoplay" loop="loop" style="width:inherit; height:inherit;float:left;padding:0px">
            <source src="~/images/Antea25_clip.mp4" type="video/mp4" />
            </video>
        </div>
       
    </div>
    
</div>
<div style="height:30px"></div>
